{
  "compileOnSave": true,
  "compilerOptions": {
    "jsx": "react",
    "module": "CommonJs",
    "target": "ES5",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "sourceMap": false,
    "lib": ["es2015"],
    "declaration": true,
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["node_modules/*", "**/*.spec.ts"]
}
